extends layout

block content
  h1 ID: #{bookinstance._id}

  p #[strong Назва:]
    a(href=bookinstance.book.url) #{bookinstance.book.title}

  p #[strong Видавництво:] #{bookinstance.imprint}

  p #[strong Статус:]
    if bookinstance.status=='Available'
      span.text-success #{bookinstance.status}
    else if bookinstance.status=='Maintenance'
      span.text-danger #{bookinstance.status}
    else
      span.text-warning #{bookinstance.status}

  if bookinstance.status!='Available'
    p #[strong Дата повернення:] #{bookinstance.due_back_formatted}

  hr
  p
    a.btn.btn-primary(href=bookinstance.url+'/update') Оновити екземпляр книги
  p
    a.btn.btn-danger(href=bookinstance.url+'/delete') Видалити екземпляр книги